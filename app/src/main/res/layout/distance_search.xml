<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"/>

    <ToggleButton
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:id="@+id/bar_btn"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textOff=""
        android:textOn=""
        android:background="@drawable/bars_map_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:id="@+id/club_btn"
        android:textOff=""
        android:textOn=""
        android:background="@drawable/clubs_map_button"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bar_btn"
        android:layout_toEndOf="@+id/bar_btn" />

    <Spinner
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:id="@+id/date_spinner"
        style="@style/spinner_style"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/club_btn"
        android:layout_toEndOf="@+id/club_btn" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fb_btn"
        android:background="@drawable/facebook"
        android:visibility="gone"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>